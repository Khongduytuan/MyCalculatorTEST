<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/backgroundApp"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="30dp"
        android:background="@color/iconBackground"
        android:gravity="bottom"
        >
        <TextView
            android:id="@+id/tv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text=""
            />

        <TextView
            android:id="@+id/tv_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="50sp"
            android:textColor="@color/greenM"
            android:text=""
            />
    </LinearLayout>

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:stretchColumns="*">
       <TableRow>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_clear"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="C" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_bracket_left"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="(" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_bracket_right"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text=")" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_div"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="รท" />

       </TableRow>

       <TableRow>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_7"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="7" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_8"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="8" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_9"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="9" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_mul"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="ร" />

       </TableRow>
       <TableRow>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_4"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="4" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_5"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="5" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_6"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="6" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_sub"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="-" />

       </TableRow>
       <TableRow>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_1"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="1" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_2"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="2" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_3"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="3" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_add"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="+" />

       </TableRow>
       <TableRow>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_num_0"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="0" />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_dot"
               android:layout_width="wrap_content"
               android:layout_height="90dp"
               style="@style/button"
               android:text="." />
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/btn_equal"
               android:layout_width="0dp"
               android:layout_height="90dp"
               android:layout_weight="1"
               style="@style/button"
               android:background="@color/orange"
               android:text="=" />

       </TableRow>
   </TableLayout>
</LinearLayout>